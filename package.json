{
  "name": "Haptic-Jacket-Controller",
  "version": "1.0.0",
  "description": "A controller application to control the modules on haptic jacket",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . --overwrite --platform=darwin --arch=all --icon=assets/icons/icon.icns --extra-resource=./extraResources/config.csv --prune=true --out=release-builds",
    "build:package": "electron-packager . --out=out",
    "build:snap": "electron-installer-snap --src=out/myappname-linux-x64"
  },
  "repository": "https://github.com/Pi-31415/Haptic-Jacket-Official",
  "keywords": [
    "Haptic",
    "Jacket"
  ],
  "author": "Pi Ko",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^11.4.9",
    "electron-installer-snap": "^5.1.0",
    "electron-packager": "^15.2.0"
  },
  "dependencies": {
    "csv": "^5.5.0",
    "csv-parser": "^3.0.0"
  },
  "devDependencies": {
    "electron": "7.0.0"
  }
}
